{
    "appenders": [{
        "type": "console",
        "filename": "tattva.log",
        "pattern": "-yyyy-MM-dd",
        "layout": {
            "type": "pattern",
            "pattern": "[%d{DATE}] %[[%p]%] - %m"
        },
        "maxLogSize": 1024,
        "backups": 3
    }, {
        "type": "dateFile",
        "filename": "tattva.log",
        "pattern": "-yyyy-MM-dd",
        "layout": {
            "type": "pattern",
            "pattern": "[%d{DATE}] [%p] - %m"
        },
        "maxLogSize": 1024,
        "backups": 3
    }]
}